<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/imgMenuBackImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/bank_BackImageView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Retour"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/bank_spacing_standard_1"
            android:layout_marginStart="@dimen/bank_spacing_standard_1"
            android:gravity="start|center"
            android:visibility="gone"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/txtMenuItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/bank_spacing_standard_1"
            android:layout_marginTop="@dimen/bank_spacing_standard_1"
            android:layout_marginEnd="@dimen/bank_spacing_standard_1"
            android:gravity="start|center"
            tools:text="Title text"
            style="@style/bank_TitleTextView" />
    </LinearLayout>

</LinearLayout>